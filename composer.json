{
    "name": "digitalcloud/multilingual-nova",
    "description": "ðŸ’ª Multilingual Nova (using default nova fields)",
    "keywords": [
        "laravel",
        "nova"
    ],
    "license": "MIT",
    "require": {
        "php": "8.2.25",
        "spatie/laravel-translatable": "^6.9",
        "spatie/laravel-package-tools": "^1.92"
    },
    "autoload": {
        "psr-4": {
            "Digitalcloud\\MultilingualNova\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digitalcloud\\MultilingualNova\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Digitalcloud\\MultilingualNova\\FieldServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^v10.2",
        "pestphp/pest-plugin-faker": "^v3.0",
        "pestphp/pest-plugin-laravel": "^v3.2",
        "phpunit/phpunit": "^v11.5",
        "laravel/nova": "^5.0",
        "laravel/framework": "^11.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
